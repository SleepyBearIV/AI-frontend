<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SendButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#1976D2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="8,2"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

    <Style x:Key="ChatListBoxBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#90CAF9"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#1976D2" BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ChatTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="BorderBrush" Value="#90CAF9"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#1976D2" BlurRadius="8" ShadowDepth="0" Opacity="0.10"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>