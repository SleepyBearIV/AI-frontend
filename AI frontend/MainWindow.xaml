<Window x:Class="AI_frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AI_frontend"
        mc:Ignorable="d"
        Title="AI Chat" Height="507" Width="900">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:MessageAlignmentConverter x:Key="MessageAlignmentConverter"/>
            <local:MessageHorizontalAlignmentConverter x:Key="MessageHorizontalAlignmentConverter"/>
            <local:MessageBackgroundConverter x:Key="MessageBackgroundConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFB3E5FC" Offset="0"/>
                <GradientStop Color="#FF81D4FA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Indicator -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,400,0">
            <Ellipse x:Name="ConnectionStatusLight" Width="20" Height="20" Fill="Red" Stroke="Gray" StrokeThickness="2"/>
            <TextBlock x:Name="ConnectionStatusLabel" Text="Offline" FontWeight="Bold" FontSize="16" Foreground="Red" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Chat Area -->
        <Grid Grid.Row="1" Margin="20,10,20,10">
            <Border Style="{StaticResource ChatListBoxBorderStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ScrollViewer x:Name="ChatScrollViewer" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              CanContentScroll="False"
                              Margin="10">
                    <ItemsControl x:Name="ConversationListBox" 
                                  ScrollViewer.CanContentScroll="False">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Container for message alignment -->
                                <Grid Margin="5">
                                    <Border Background="{Binding IsUser, Converter={StaticResource MessageBackgroundConverter}}" 
                                            CornerRadius="10" 
                                            Padding="8" 
                                            MaxWidth="600"
                                            MinWidth="100"
                                            HorizontalAlignment="{Binding IsUser, Converter={StaticResource MessageHorizontalAlignmentConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Text}" 
                                                       TextWrapping="Wrap"
                                                       TextAlignment="{Binding IsUser, Converter={StaticResource MessageAlignmentConverter}}"/>
                                            <!-- File attachments display -->
                                            <ItemsControl ItemsSource="{Binding AttachedFiles}" Margin="0,5,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#E3F2FD" CornerRadius="5" Padding="5" Margin="2">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="📎" FontSize="14" Margin="0,0,5,0"/>
                                                                <TextBlock Text="{Binding}" FontSize="12" FontStyle="Italic" TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
            <Border x:Name="TypingBubble"
                    Background="#E3F2FD"
                    CornerRadius="10"
                    Padding="8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="20,0,0,10"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Fill="#90CAF9" Margin="0,0,5,0"/>
                    <Ellipse Width="10" Height="10" Fill="#90CAF9" Margin="0,0,5,0"/>
                    <Ellipse Width="10" Height="10" Fill="#90CAF9"/>
                    <TextBlock Text="AI is typing..." FontStyle="Italic" Foreground="#1976D2" Margin="10,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Input Area -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10" Margin="20,0,20,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Attached files display -->
                <ListBox x:Name="AttachedFilesListBox" Grid.Row="0" MaxHeight="80" Margin="0,0,0,5" 
                         Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Visibility="Collapsed">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#E3F2FD" CornerRadius="5" Padding="5" Margin="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📎" FontSize="12" Margin="0,0,3,0"/>
                                    <TextBlock Text="{Binding Name}" FontSize="11" MaxWidth="100" TextTrimming="CharacterEllipsis"/>
                                    <Button Content="✕" FontSize="10" Width="16" Height="16" Margin="3,0,0,0" 
                                            Background="Transparent" BorderThickness="0" Foreground="Red"
                                            Click="RemoveFileButton_Click" Tag="{Binding}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Input controls -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#E3F2FD" BorderThickness="1" BorderBrush="#90CAF9" 
                            CornerRadius="5" Width="40" Height="40" Margin="0,0,10,0">
                        <Button x:Name="AttachFileButton" Content="📎" Background="Transparent" BorderThickness="0"
                                Click="AttachFileButton_Click"/>
                    </Border>
                    <TextBox x:Name="UserInputTextBox" Grid.Column="1" Height="40" Margin="0,0,10,0" 
                             KeyDown="UserInputTextBox_KeyDown" Style="{StaticResource ChatTextBoxStyle}" 
                             HorizontalAlignment="Stretch" VerticalContentAlignment="Center"/>
                    <Button x:Name="SubmitButton" Grid.Column="2" Content="Send" Click="SubmitButton_Click" 
                            Style="{StaticResource SendButtonStyle}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
