<Window x:Class="AI_frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AI_frontend"
        mc:Ignorable="d"
        Title="AI Chat" Height="507" Width="900">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:MessageAlignmentConverter x:Key="MessageAlignmentConverter"/>
            <local:MessageBackgroundConverter x:Key="MessageBackgroundConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFB3E5FC" Offset="0"/>
                <GradientStop Color="#FF81D4FA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Indicator -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,400,0">
            <Ellipse x:Name="ConnectionStatusLight" Width="20" Height="20" Fill="Red" Stroke="Gray" StrokeThickness="2"/>
            <TextBlock x:Name="ConnectionStatusLabel" Text="Offline" FontWeight="Bold" FontSize="16" Foreground="Red" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Chat Area -->
        <Grid Grid.Row="1" Margin="20,10,20,10">
            <Border Style="{StaticResource ChatListBoxBorderStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ListBox x:Name="ConversationListBox" Margin="10,10,10,10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding IsUser, Converter={StaticResource MessageBackgroundConverter}}" CornerRadius="10" Padding="8" Margin="5">
                                <TextBlock Text="{Binding Text}" TextAlignment="{Binding IsUser, Converter={StaticResource MessageAlignmentConverter}}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
            <Border x:Name="TypingBubble"
                    Background="#E3F2FD"
                    CornerRadius="10"
                    Padding="8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="20,0,0,10"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Fill="#90CAF9" Margin="0,0,5,0"/>
                    <Ellipse Width="10" Height="10" Fill="#90CAF9" Margin="0,0,5,0"/>
                    <Ellipse Width="10" Height="10" Fill="#90CAF9"/>
                    <TextBlock Text="AI is typing..." FontStyle="Italic" Foreground="#1976D2" Margin="10,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Input Area -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10" Margin="20,0,20,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="UserInputTextBox" Grid.Column="0" Height="30" Margin="0,0,10,0" KeyDown="UserInputTextBox_KeyDown" Style="{StaticResource ChatTextBoxStyle}" HorizontalAlignment="Stretch"/>
                <Button x:Name="SubmitButton" Grid.Column="1" Content="Send" Click="SubmitButton_Click" Style="{StaticResource SendButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
